{
    "name": "casfid/book-management",
    "description": "Book Management Technical Test with PHP Native",
    "type": "project",
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.5",
        "monolog/monolog": "^2.5",
        "firebase/php-jwt": "^6.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "mockery/mockery": "^1.5"
    },
    "autoload": {
        "psr-4": {
            "BookManagement\\Domain\\": "src/Domain/",
            "BookManagement\\Infrastructure\\": "src/Infrastructure/",
            "BookManagement\\Application\\": "src/Application/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BookManagement\\Tests\\": "src/Tests/"
        }
    },
    "scripts": {
        "test": "phpunit src/Tests"
    }
}
