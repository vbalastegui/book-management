{
    "name": "casfid/book-management",
    "description": "Book Management Technical Test with PHP Native",
    "type": "project",
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.5",
        "monolog/monolog": "^2.5",
        "slim/slim": "^4.11",
        "slim/psr7": "^1.6",
        "php-di/php-di": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "BookManagement\\Domain\\": "src/Domain/",
            "BookManagement\\Infrastructure\\": "src/Infrastructure/",
            "BookManagement\\Application\\": "src/Application/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BookManagement\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:acceptance": "phpunit --testsuite 'Acceptance Tests'",
        "test:unit": "phpunit --testsuite 'Unit Tests'",
        "test:integration": "phpunit --testsuite 'Integration Tests'"
    }
}
